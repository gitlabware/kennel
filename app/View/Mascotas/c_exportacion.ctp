  function autosize(dynamicSpan, dynamicDiv, size, sw)
  {

      var textSpan = document.getElementById(dynamicSpan);
      var textDiv = document.getElementById(dynamicDiv);
      if (size != null)
      {
          textSpan.style.fontSize = size;
      }
      else {
          textSpan.style.fontSize = 64;
      }
      var activa = false;
      var activa2 = false;
